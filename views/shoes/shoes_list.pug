extends ../layout

block content
	h1= title
	if shoes.length
		p Check out our wide array of running shoes 
		ul(class="item-grid")
			each shoe in shoes
				li(class="grid-item") 
					a(href=shoe.url) 
						img(src=shoe.thumbnail_url ? `https://res.cloudinary.com/${cloudinaryName}/image/fetch/c_fill,h_600,w_600/${shoe.thumbnail_url}` : "/images/prod-placeholder.jpg" alt=shoe.name)
						p #{shoe.name} - $#{shoe.price}
	else 
		p There are no shoes in our inventory