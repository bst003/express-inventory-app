extends layout

block content
    h1 #{title}
    if shoesInBrand.length
        p check out our selection of shoes for #{brand.name}
        ul 
            each shoe in shoesInBrand
                li 
                    a(href=shoe.url) #{shoe.name} - $#{shoe.price}
    else 
        p There are no shoes in this brand.
    hr 
    a(href=brand.url + "/update") Update
    if !shoesInBrand.length
        br
        br 
        a(href=brand.url + "/delete") Delete